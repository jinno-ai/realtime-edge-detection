# Development configuration
model:
  path: yolov8n.pt  # Small model for faster iteration
  type: yolov8
  cache_dir: ~/.cache/edge-detection/models

device:
  type: cpu  # Use CPU for development
  fallback: cpu
  gpu_id: 0

detection:
  confidence_threshold: 0.25  # Lower threshold for testing
  iou_threshold: 0.45
  max_detections: 300

preprocessing:
  target_size: [640, 640]
  letterbox: true
  normalize: true

output:
  format: json
  save_dir: output
  show_results: true  # Show results for debugging
